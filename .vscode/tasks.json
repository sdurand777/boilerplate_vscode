{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        "${workspaceFolder}",
        "-B",
        "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake",
      "args": [
          "--build",
          "${workspaceFolder}/build",
          "--config",
          "Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
//      "dependsOn": "CMake: Configure",
      "problemMatcher": []
    }
  ]
}
